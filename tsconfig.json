{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    // Aqui A baixo tipagem do mapeamento de caminhos 
    "baseUrl": "./",
    "paths": {
			"@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@routes/*": ["src/routes/*"],
      "@screens/*": ["src/screens/*"],
      "@storage/*": ["src/storages/*"],
      "@theme/*": ["src/theme/*"],
      "@utils/*": ["src/utils/*"],
			"@dtos/*": ["./src/dtos/*"],
    }
  }
}
